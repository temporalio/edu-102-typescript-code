{
  "name": "debug-activity",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "tsc --build",
    "build.watch": "tsc --build --watch",
    "lint": "eslint .",
    "start": "ts-node src/worker.ts",
    "start.watch": "nodemon src/worker.ts",
    "workflow": "ts-node src/client.ts",
    "format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "test": "mocha --exit --require ts-node/register --require source-map-support/register src/mocha/*.test.ts"
  },
  "nodemonConfig": {
    "execMap": {
      "ts": "ts-node"
    },
    "ext": "ts",
    "watch": [
      "src"
    ]
  },
  "dependencies": {
    "@temporalio/activity": "~1.8.0",
    "@temporalio/client": "~1.8.0",
    "@temporalio/worker": "~1.8.0",
    "@temporalio/workflow": "~1.8.0",
    "nanoid": "3.x"
  },
  "devDependencies": {
    "@temporalio/testing": "~1.8.0",
    "@tsconfig/node18": "^1.0.0",
    "@types/mocha": "8.x",
    "@types/node": "^18.11.43",
    "@types/sinon": "^10.0.4",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-deprecation": "^1.2.1",
    "mocha": "8.x",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "sinon": "^11.1.2",
    "ts-node": "^10.8.1",
    "typescript": "^4.4.2"
  }
}
