{
  "name": "testing-code",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "tsc --build",
    "build.watch": "tsc --build --watch",
    "lint": "eslint .",
    "start": "ts-node src/worker.ts",
    "start.watch": "nodemon src/worker.ts",
    "workflow": "ts-node src/client.ts",
    "service": "ts-node src/service.ts",
    "service.watch": "nodemon src/service.ts",
    "format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "test": "mocha --exit --require ts-node/register --require source-map-support/register src/mocha/*.test.ts"
  },
  "nodemonConfig": {
    "execMap": {
      "ts": "ts-node"
    },
    "ext": "ts",
    "watch": [
      "src"
    ]
  },
  "dependencies": {
    "@temporalio/activity": "~1.10.0",
    "@temporalio/client": "~1.10.0",
    "@temporalio/worker": "~1.10.0",
    "@temporalio/workflow": "~1.10.0",
    "axios": "^1.4.0",
    "express": "^4.18.2",
    "nanoid": "3.x"
  },
  "devDependencies": {
    "@temporalio/testing": "~1.10.0",
    "@tsconfig/node20": "^1.0.2",
    "@types/express": "^4.17.16",
    "@types/mocha": "8.x",
    "@types/node": "^20.14.2",
    "@types/sinon": "^10.0.4",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-deprecation": "^1.2.1",
    "mocha": "8.x",
    "nodemon": "^3.1.3",
    "prettier": "^2.3.2",
    "sinon": "^11.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
